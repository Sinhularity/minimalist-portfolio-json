---
const { title } = Astro.props;
---

<section>
  {title && <h2>{title}</h2>}
  <slot />
</section>

<style>
  section {
    max-width: 600px;
    margin: 0 auto 48px;
    align-items: flex-start;
  }
  h2 {
    margin-bottom: 8px;
    font-weight: 700;
    line-height: 1.6;
    font-size: 1.5rem;
  }
  @media (width <= 600px) {
    section {
      margin-bottom: 38px;
    }
  }
</style>
